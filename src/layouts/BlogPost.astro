---
import BaseHead from '../components/BaseHead.astro'
import Header from '../components/Header.astro'
import Footer from '../components/Footer.astro'
import Body from '../components/Body.astro'
import Content from '../components/Content.astro'

export interface Props {
  content: {
    title: string
    description: string
    pubDate?: string
    updatedDate?: string
    heroImage?: string
  }
}

const {
  content: { title, description, pubDate, updatedDate, heroImage },
} = Astro.props
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <BaseHead title={title} description={description} />
  </head>

  <Body>
    <Header />
    <main class="pt-[56px]">
      <Content className="pt-6">
        <article class="mb-8">
          <div class="mb-8">
            {
              heroImage && (
                <img
                  class="border border-slate-300 dark:border-zinc-700"
                  width={720}
                  height={360}
                  src={heroImage}
                  alt=""
                />
              )
            }
          </div>

          <h1 class="text-xl font-bold my-2 font-mplus">{title}</h1>
		  <div class="font-mplus">{description}</div>
          {pubDate && <time class="block my-2 font-mplus">{pubDate}</time>}
          {
            updatedDate && (
              <div>
                Last updated on <time>{updatedDate}</time>
              </div>
            )
          }
          <hr class="border-zinc-400 my-4" />
          <slot />
        </article>
      </Content>
    </main>
    <Footer />
  </Body>
</html>
